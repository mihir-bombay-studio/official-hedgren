            <div class="nav-right-cards">
              {%- for childlink in link.links -%}
              {% if childlink.title == "(col-left)" or childlink.title == "(col)" or childlink.title == "(met de)" or childlink.title == "(avec le)" or childlink.title == "(Spalte-links)" or childlink.title == "(col-gauche)" %}
              {% assign handlesxn = childlink.url | split: "/" %}
              <div class="nav-card">
                {% assign colxn = collections[handlesxn.last] %}
                {% if colxn.url == blank %}
                {% assign colxn = all_products[handlesxn.last] %}
                {% endif %}
                <a href="{{ colxn.url }}">
                <img src="{{ colxn.featured_image | image_url: width: 350 }}" alt="{{ colxn.title }}" loading="lazy" {% if colxn.featured_image.height >= colxn.featured_image.width %}style="object-fit: contain;"{% endif %}>
                  <div class="nav-title">{{ colxn.title }}</div>
                </a>
              </div>
              {% endif %}
              {%- endfor -%}
            </div>
            {% else %}
            <ul class="order-2">
              {%- for childlink in link.links -%}
              {% assign first_letter = childlink.title | slice: 0 %}
              {% if first_letter == "-" %}
              <li class="link-primary">
                <a href="{{ childlink.url }}">{{ childlink.title | escape | remove_first: "-" }} <span class="link-arows">{% include "svg-arrow" %}{% include "svg-arrow" %}</span></a>
              </li>
              {% elsif childlink.title != "(col)" and childlink.title != "(met de)" and childlink.title != "(avec le)" %}
              {% assign combinedHash = routes.root_url | append: "#" %}
              {% if childlink.url == "#" or childlink.url == combinedHash %}
              <li class="link-heading">
                <a href="#" onclick="return false;">{{ childlink.title | escape }}</a>
              </li>
              {% else %}
              <li class="link-secondary">
                <a href="{{ childlink.url }}">{{ childlink.title | escape }} <span class="link-arows">{% include "svg-arrow" %}</span></a>
              </li>
              {% endif %}
              {% endif %}
              {%- endfor -%}
            </ul>
            {% endif %}
          </div>
        </div>
        {%- endif -%}
        </div>
      </div>
      {%- endfor -%}
      {%- endif -%}
    
    <div class="mobile-menu-item-wrap">
      <div class="mobile-menu-links">
        {%- for link in section.settings.mobilemenu1.links -%}
        <a href="{{ link.url }}">{{ link.title }} <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        {%- endfor -%}
      </div>
    </div>
    <div class="mobile-menu-links">
        {%- for link in section.settings.mobilemenu2.links -%}
      	<a href="{{ link.url }}">{{ link.title }} <span class="link-arows">{% include "icon-right-chev-black" %}</span></a>
        {%- endfor -%}
      
      <a href="#" onclick="return false;" title="{{ request.locale.name }}">LANGUAGE - {{ request.locale.name }}</a>
      
        
        {% unless routes.root_url == "/" %}
        {% assign pathx = request.path | replace: routes.root_url,'' %}
        {% else %}
        {% assign pathx = request.path %}
        {% endunless %}
        {% assign pathx = pathx | remove_first: "/" %}
      
        {% if request.locale.iso_code != "en" %}
        <a class="lang" id="en-m" href="/{{ pathx }}" title="English">English</a>
        {% endif %}
        {% if request.locale.iso_code != "fr" %}
        <a class="lang" id="fr-m" href="/fr-fr/{{ pathx }}" title="Français">Français</a>
        {% endif %}
        {% if request.locale.iso_code != "nl" %}
        <a class="lang" id="nl-m" href="/nl-nl/{{ pathx }}" title="Nederlands">Nederlands</a>
        {% endif %}
        {% if request.locale.iso_code != "de" %}
        <a class="lang" id="de-m" href="/de-de/{{ pathx }}" title="Deutcha">Deutsch</a>
        {% endif %}
      <script>
        console.log("{{request.path}}");
      </script>
      </div>
    <div class="social-media-icons">
      <div class="social-icon">
        <a href="{{ settings.social_facebook_link }}" target="_blank">{% include "icon-fb-black" %}</a>
      </div>
      <div class="social-icon">
        <a href="{{ settings.social_instagram_link }}" target="_blank">{% include "icon-insta-black" %}</a>
      </div>
      <div class="social-icon">
        <a href="{{ settings.social_pinterest_link }}" target="_blank">{% include "icon-pint-black" %}</a>
      </div>
      <div class="social-icon">
        <a href="{{ settings.social_youtube_link }}" target="_blank">{% include "icon-yt-black" %}</a>
      </div>
    </div>
    
  </div>
</header>


