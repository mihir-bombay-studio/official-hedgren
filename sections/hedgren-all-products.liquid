  </g>
</svg>
</span></div>`);
        arrClass.push($(this).find('.filter-checkbox').data('value'));
      });
      $.each(arrClass , function(index, val) {
        $('.hero-product').each(function(i,v) {            
          if($(this).hasClass(val)) {
            $(this).data('iteration',(parseInt($(this).data('iteration')) || 0)+1);
          }
        });
        $('.hero-product').each(function(i,v) {            
