{% schema %}
  {
    "name": "Hedgren Discover Coll",
    "settings": [
		{
			"id": "title_left",
			"type": "text",
			"label": "Title Left"
		},
		{
			"id": "title_mid",
			"type": "text",
			"label": "Title Middle"
		},
		{
			"id": "title_right",
			"type": "text",
			"label": "Title Right"
		},
		{
			"id": "subtitle",
			"type": "text",
			"label": "Subtitle"
		},
		{
			"id": "your_text",
			"type": "text",
			"label": "Your Text",
			"default": "Your favorite everyday companion. Ready-to-go bags and travel gear for everyday use."
		},
		{
			"id": "discover_text",
			"type": "text",
			"label": "Discover Text",
			"default": "DISCOVER COLLECTION"
		},
		{
			"id": "discover_shoptext",
			"type": "text",
			"label": "Shop Text",
			"default": "SHOP COLLECTIONS"
		}
	],
	"blocks": [
		{
			"type": "collect",
			"name": "Collection",
			"settings": [
				{
                    "id": "coll",
                    "type": "collection",
                    "label": "Select Collection"
                },
				{
                    "id": "page",
                    "type": "url",
                    "label": "Select Collection Page"
                }
			]
		}
	],
	"presets":[
      {
         "name":"Hedgren Discover Coll"
      }
   ]
  }
{% endschema %}

