         "default":"p-no-top",
         "label":"Padding Top"
      },
      {
         "type":"select",
         "id":"padding_bottom",
         "options":[
            {
               "value":"p-normal-bottom",
               "label":"Normal"
            },
            {
               "value":"p-half-bottom",
               "label":"Half"
            },
            {
               "value":"p-no-bottom",
               "label":"None"
            }
         ],
         "default":"p-no-bottom",
         "label":"Padding Bottom"
      },
	  {
		 "type": "color",
		 "id": "bg_color",
