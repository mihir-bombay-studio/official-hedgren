<script>

    // Init empty gallery array
    var container = [];
  var gallery;
  
    // Loop over gallery items and push it to the array
    $('.product-imgs .product-img').each(function() {
      if($(this).data('vid') == 'yes') {
        var $link = $(this),
            item = {
              html: $link.html()
            };
        container.push(item);
      } else {
        var $link = $(this),
            item = {
              src: $link.attr('href'),
              w: $link.data('width'),
              h: $link.data('height'),
              title: $link.data('caption')
            };
        container.push(item);
      }
    });

    // Define click event on gallery item
    $('.product-imgs .product-img,.product-imgs-mobile .product-img-mob').click(function(event) {

      // Prevent location change
      event.preventDefault();

      // Define object and gallery options
      var $pswp = $('.pswp')[0],
          options = {
            index: $(this).data('index'),
            bgOpacity: 0.85,
            showHideOpacity: true
          };

      // Initialize PhotoSwipe
      gallery = new PhotoSwipe($pswp, PhotoSwipeUI_Default, container, options);
      gallery.init();
    });

</script>
